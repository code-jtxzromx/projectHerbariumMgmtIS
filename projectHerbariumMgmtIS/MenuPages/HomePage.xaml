    <Grid Padding="10" RequestedTheme="Light">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0" StartPoint="1,1">
                <!-- Earthly -->
                <GradientStop Color="#DF649173" Offset="1"/>
                <GradientStop Color="#DFDBD5A4" Offset="0"/>
