<ContentDialog x:ConnectionId='1'
    x:Class="projectHerbariumMgmtIS.Dialogs.FamilyForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projectHerbariumMgmtIS.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                                                 
    PrimaryButtonText="Save"
    SecondaryButtonText="Clear"
    CloseButtonText="Cancel"
                                                         
                                                             >
    <ContentDialog.Resources>
        <DataTemplate x:Key="HeaderTemplate">
            <StackPanel>
                <TextBlock Text="{Binding}" TextWrapping="WrapWholeWords" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <TextBox x:ConnectionId='3' x:Name="txfFamilyID" Header="Family ID:" HeaderTemplate="{StaticResource HeaderTemplate}"
                                                                 
                 Grid.Column="0" Grid.Row="0" Margin="5" IsEnabled="False" />

        <ComboBox x:ConnectionId='4' x:Name="cbxOrderName" Header="Order Name: *" HeaderTemplate="{StaticResource HeaderTemplate}"
                                                                            PlaceholderText="Select Order Name"
                  Grid.Column="0" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" />
        <TextBox x:ConnectionId='5' x:Name="txfFamilyName" Header="Family Name: *" HeaderTemplate="{StaticResource HeaderTemplate}"
                                                                    PlaceholderText="Enter Family Name"
                 Grid.Column="1" Grid.Row="1" Margin="5" />
        <TextBlock x:ConnectionId='6' x:Name="msgOrderName" Grid.Column="0" Grid.Row="2" Margin="5 -2" FlowDirection="RightToLeft"
                   Text="This Field is Required" FontSize="10" Foreground="Red" />
        <TextBlock x:ConnectionId='7' x:Name="msgFamilyName" Grid.Column="1" Grid.Row="2" Margin="5 -2" FlowDirection="RightToLeft" 
                   Text="This Field is Required" FontSize="10" Foreground="Red" />
    </Grid>
</ContentDialog>

