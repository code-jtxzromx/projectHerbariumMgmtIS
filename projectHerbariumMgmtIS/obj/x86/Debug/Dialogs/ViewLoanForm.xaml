<ContentDialog x:ConnectionId='1'
    x:Class="projectHerbariumMgmtIS.Dialogs.ViewLoanForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projectHerbariumMgmtIS.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Title="Plant Loan Information"
    CloseButtonText="Close">

    <Grid Width="500">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="Loan Number: " />
            <TextBlock Grid.Column="0" Grid.Row="1" Margin="5" Text="Borrower: " />
            <TextBlock Grid.Column="0" Grid.Row="2" Margin="5" Text="Duration: " />
            <TextBlock Grid.Column="0" Grid.Row="3" Margin="5" Text="Purpose: " />
            <TextBlock Grid.Column="0" Grid.Row="4" Margin="5" Text="Status: " />

            <TextBlock x:ConnectionId='3' Grid.Column="1" Grid.Row="0" Margin="5" TextWrapping="WrapWholeWords" 
                                                                />
            <TextBlock x:ConnectionId='4' Grid.Column="1" Grid.Row="1" Margin="5" TextWrapping="WrapWholeWords" 
                                                              />
            <TextBlock x:ConnectionId='5' Grid.Column="1" Grid.Row="2" Margin="5" TextWrapping="WrapWholeWords"
                                                              />
            <TextBlock x:ConnectionId='6' Grid.Column="1" Grid.Row="3" Margin="5" TextWrapping="WrapWholeWords"
                                                             />
            <TextBlock x:ConnectionId='7' Grid.Column="1" Grid.Row="4" Margin="5" TextWrapping="WrapWholeWords"
                                                            />

        </Grid>
        <controls:DataGrid x:ConnectionId='2' x:Name="dgrLoanedSpecies" Grid.Row="1" Margin="5" Height="200" AutoGenerateColumns="False"  CanUserSortColumns="True">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Width="*" Header="Family Name" Binding="{Binding FamilyName}" IsReadOnly="True" />
                <controls:DataGridTextColumn Width="2*" Header="Taxon Name" Binding="{Binding ScientificName}" IsReadOnly="True" />
                <controls:DataGridTextColumn Width="100" Header="Copies" Binding="{Binding Copies}" IsReadOnly="True" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</ContentDialog>

