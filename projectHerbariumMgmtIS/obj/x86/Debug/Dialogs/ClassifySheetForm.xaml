<ContentDialog x:ConnectionId='1' 
    xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    x:Class="projectHerbariumMgmtIS.Dialogs.ClassifySheetForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projectHerbariumMgmtIS.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Classify and Store Herbarium Sheet"
    PrimaryButtonText="Store to Box"
    CloseButtonText="Cancel"
                                                         >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Width="240" Height="320" Margin="5 10" Background="#0F000000" VerticalAlignment="Top">
            <Image x:ConnectionId='16' x:Name="picHerbariumSheet"                                               />
        </Border>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Height="320">
            <Grid Margin="10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="Store to: " />
                <TextBlock Grid.Column="0" Grid.Row="2" Margin="5" Text="Accession Number: " />
                <TextBlock Grid.Column="0" Grid.Row="3" Margin="5" Text="Reference Accession: "/>
                <TextBlock Grid.Column="0" Grid.Row="4" Margin="5" Text="Scientific Name: "/>
                <TextBlock Grid.Column="0" Grid.Row="5" Margin="5" Text="Known as: "/>
                <TextBlock Grid.Column="0" Grid.Row="6" Margin="5" Text="Date Collected: " />
                <TextBlock Grid.Column="0" Grid.Row="7" Margin="5" Text="Date Deposited: " />
                <TextBlock Grid.Column="0" Grid.Row="8" Margin="5" Text="Date Verified: " />
                <TextBlock Grid.Column="0" Grid.Row="9" Margin="5" Text="Location: " />
                <TextBlock Grid.Column="0" Grid.Row="10" Margin="5" Text="Collector: " />
                <TextBlock Grid.Column="0" Grid.Row="11" Margin="5" Text="Validated by: " />
                <TextBlock Grid.Column="0" Grid.Row="12" Margin="5" Text="Description: " />

                <control:WrapPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock x:ConnectionId='14' x:Name="lblBoxNumber" TextWrapping="WrapWholeWords" />
                    <TextBlock Text=" [" />
                    <TextBlock x:ConnectionId='15' TextWrapping="WrapWholeWords"                                                           />
                    <TextBlock Text="]" />
                </control:WrapPanel>
                <ToggleSwitch x:ConnectionId='2' Grid.Column="1" Grid.Row="1" Margin="5 0" 
                              OnContent="Available for Loaning" OffContent="Not Available for Loaning" 
                                                                                                                             />
                <TextBlock x:ConnectionId='3' Grid.Column="1" Grid.Row="2" Margin="5" TextWrapping="WrapWholeWords"
                                                                                          />
                <TextBlock x:ConnectionId='4' Grid.Column="1" Grid.Row="3" Margin="5" TextWrapping="WrapWholeWords"
                                                                                          />
                <TextBlock x:ConnectionId='5' Grid.Column="1" Grid.Row="4" Margin="5" TextWrapping="WrapWholeWords"
                                                                                         />
                <TextBlock x:ConnectionId='6' Grid.Column="1" Grid.Row="5" Margin="5" TextWrapping="WrapWholeWords"
                                                                                            />
                <TextBlock x:ConnectionId='7' Grid.Column="1" Grid.Row="6" Margin="5" TextWrapping="WrapWholeWords"
                                                                                        />
                <TextBlock x:ConnectionId='8' Grid.Column="1" Grid.Row="7" Margin="5" TextWrapping="WrapWholeWords"
                                                                                        />
                <TextBlock x:ConnectionId='9' Grid.Column="1" Grid.Row="8" Margin="5" TextWrapping="WrapWholeWords"
                                                                                        />
                <TextBlock x:ConnectionId='10' Grid.Column="1" Grid.Row="9" Margin="5" TextWrapping="WrapWholeWords"
                                                                                   />
                <TextBlock x:ConnectionId='11' Grid.Column="1" Grid.Row="10" Margin="5" TextWrapping="WrapWholeWords"
                                                                                    />
                <TextBlock x:ConnectionId='12' Grid.Column="1" Grid.Row="11" Margin="5" TextWrapping="WrapWholeWords"
                                                                                    />
                <TextBlock x:ConnectionId='13' Grid.Column="1" Grid.Row="12" Margin="5" TextWrapping="WrapWholeWords"
                                                                                      />
            </Grid>
        </ScrollViewer>
    </Grid>
</ContentDialog>

