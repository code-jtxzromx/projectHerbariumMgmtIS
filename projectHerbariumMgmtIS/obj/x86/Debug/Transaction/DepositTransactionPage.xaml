<Page x:ConnectionId='1'
    x:Class="projectHerbariumMgmtIS.Transaction.DepositTransactionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projectHerbariumMgmtIS.Transaction"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="pnlDepositRoot" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='3' x:Name="PicturePane" Width="auto" />
            <ColumnDefinition x:ConnectionId='4' x:Name="DetailPane" Width="480" MaxWidth="680"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <Border Height="360" Width="270" Margin="10" Background="#0FFFFFFF">
                <Image x:ConnectionId='31' x:Name="picHerbariumSheet" Height="360" Width="270" Stretch="Uniform" />
            </Border>
            <Button x:ConnectionId='29' x:Name="btnUploadPhoto"                              Margin= "10 5" HorizontalAlignment="Stretch" Content="Upload Herbarium Sheet" />
            <Button x:ConnectionId='30' x:Name="btnCapturePhoto"                               Margin="10 5" HorizontalAlignment="Stretch" Visibility="Collapsed" Content="Capture Photo" />
        </StackPanel>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" Padding="20 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ToggleSwitch x:ConnectionId='7' x:Name="btnIsVerifiedDeposit" Grid.Row="0" Grid.ColumnSpan="2" Margin="10 5"
                                  OnContent="Verified Deposit" OffContent="Unverified Deposit"
                                                                               />
                    <ComboBox x:ConnectionId='8' x:Name="cbxPlantType" Grid.Row="1" Margin="5" 
                              Header="Plant Type: *" HorizontalAlignment="Stretch"
                                                                                                                                />
                    <TextBlock x:ConnectionId='9' x:Name="msgPlantType" Grid.Row="2" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <ComboBox x:ConnectionId='10' x:Name="cbxScientificName" Grid.Row="3" Margin="5" 
                              Header="Scientific Name: *" HorizontalAlignment="Stretch" 
                                                                                   
                              Visibility="{Binding ElementName=btnIsVerifiedDeposit, Path=IsOn, Mode=OneWay}"
                                                                                                                                />
                    <TextBlock x:ConnectionId='11' x:Name="msgScientifcName" Grid.Row="4" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <TextBox x:ConnectionId='12' x:Name="txfOrgAccessionNo" Grid.Row="5" Margin="5"
                             Header="Original Accession Number: *"
                                                                    
                                                                          
                                                                                                                           />
                    <TextBlock x:ConnectionId='13' x:Name="msgOrgAccessionNo" Grid.Row="6" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <ComboBox x:ConnectionId='14' x:Name="cbxNewAccessionNo" Grid.Row="7" Margin="5"
                              Header="Verified Accession Number: *" HorizontalAlignment="Stretch"
                              IsEnabled="{Binding ElementName=chkSameAccession, Path=IsChecked, Mode=OneWay}" 
                              Visibility="{Binding ElementName=btnIsVerifiedDeposit, Path=IsOn, Mode=OneWay}"
                                                                                                                                  />
                    <TextBlock x:ConnectionId='15' x:Name="msgNewAccessionNo" Grid.Row="8" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <CheckBox x:ConnectionId='16' x:Name="chkSameAccession" Grid.Row="9" Grid.ColumnSpan="2" Margin="5"
                              Content="This Herbarium Sheet is a Duplicate"
                              Visibility="{Binding ElementName=btnIsVerifiedDeposit, Path=IsOn, Mode=OneWay}"/>
                    <ComboBox x:ConnectionId='17' x:Name="cbxCollector" Grid.Row="10" Margin="5"
                              Header="Collector's Name: *" HorizontalAlignment="Stretch" 
                                                                                                                                />
                    <TextBlock x:ConnectionId='18' x:Name="msgCollector" Grid.Row="11" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <ComboBox x:ConnectionId='19' x:Name="cbxValidator" Grid.Row="12" Margin="5"
                              Header="Validator's Name: *" HorizontalAlignment="Stretch"
                                                                                                                                
                              Visibility="{Binding ElementName=btnIsVerifiedDeposit, Path=IsOn, Mode=OneWay}"/>
                    <TextBlock x:ConnectionId='20' x:Name="msgValidator" Grid.Row="13" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <DatePicker x:ConnectionId='21' x:Name="dpkDateCollected" Grid.Row="14" Margin="5"
                                Header="Date Collected: *" HorizontalAlignment="Stretch"
                                                                          />
                    <DatePicker x:ConnectionId='22' x:Name="dpkDateDeposited" Grid.Row="15" Margin="5"
                                Header="Date Deposited: *" HorizontalAlignment="Stretch"
                                                                          
                                                                             />
                    <DatePicker x:ConnectionId='23' x:Name="dpkDateVerified" Grid.Row="16" Margin="5"
                                Header="Date Verified: *" HorizontalAlignment="Stretch"
                                                                         
                                Visibility="{Binding ElementName=btnIsVerifiedDeposit, Path=IsOn, Mode=OneWay}"/>
                    <ComboBox x:ConnectionId='24' x:Name="cbxLocality" Grid.Row="17" Grid.ColumnSpan="2" Margin="5" 
                              Header="Location: *" HorizontalAlignment="Stretch"
                                                                                                                               />
                    <TextBlock x:ConnectionId='25' x:Name="msgLocality" Grid.Row="18" Margin="5 -2" FlowDirection="RightToLeft"                               
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <TextBox x:ConnectionId='26' x:Name="txfDescription" Grid.Row="19" Grid.ColumnSpan="2" Margin="5"
                             Header="Description:" Height="90" AcceptsReturn="True" TextWrapping="Wrap"
                                                                                                                         />
                    <TextBlock x:ConnectionId='27' x:Name="msgDescription" Grid.Row="20" Margin="5 -2" FlowDirection="RightToLeft"
                               Text="This Field is Required" FontSize="10" Foreground="Red" />
                    <CheckBox x:ConnectionId='28' x:Name="chkIsGoodCondition" Grid.Row="21" Grid.ColumnSpan="2" Margin="5"
                              Content="Plant Deposit is in Good Condtion" />
                </Grid>
            </ScrollViewer>
            <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="5 10">
                <Button x:ConnectionId='5' x:Name="btnSave"                       Margin="5" Width="75" Content="Save"
                        IsEnabled="{Binding ElementName=chkIsGoodCondition, Path=IsChecked, Mode=OneWay}"/>
                <Button x:ConnectionId='6' x:Name="btnClear"                        Margin="5" Width="75" Content="Clear" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

